<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <title><%= title %></title>
    <style>
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }
      th, td {
        border: 1px solid #ddd;
        padding: 12px;
        text-align: left;
      }
      th {
        background-color: #f4f4f4;
      }
      tr:nth-child(even) {
        background-color: #f9f9f9;
      }
      tr:hover {
        background-color: #f1f1f1;
      }

    </style>
  </head>
  <body>
    <%- include('partials/header') %>
    <h2>Hello, <%= firstName %>! Here are your current keys:</h2>

    <form action="/api/admin/genKey" method="POST">
      <%- include('partials/_csrf') %>
      <input type="hidden" name="userID" value="<%= userID.userID %>" />
        
      <button type="submit">Generate Key</button>
    </form>

    <table>
      <thead>
        <tr>
          <th>Key</th>
          <th>Created At</th>
          <th>Last Used</th>
          <th>Is Active?</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (keys.length > 0) { %>
          <% keys.forEach(function(key) { %>
            <tr>
              <td><%= key.key %></td>
              <td><%= key.created_at %></td>
              <td><%= key.last_used ? key.last_used : "Never" %></td>
              <td><%= key.is_active ? "Yes" : "No" %></td>
              <td>
                <!-- Form for toggling activation -->
                <form action="/api/admin/changeStatus" method="POST" style="display: inline;">
                  <input type="hidden" name="key" value="<%= key.key %>" />
                  <input type="hidden" name="is_active" value="<%= key.is_active ? 0 : 1 %>"
                   />
                  <%- include('partials/_csrf') %>

                  <button type="submit">
                    <%= key.is_active ? "Deactivate" : "Activate" %>
                  </button>
                </form>

                <!-- Form for deleting the key -->
                <form action="/api/admin/deleteKey" method="POST"
                  onsubmit="return confirm('Are you sure you want to delete this key?');"
                  style="display: inline;">
                  <input type="hidden" name="key" value="<%= key.key %>" />
                  <%- include('partials/_csrf') %>

                  <button type="submit" style="background-color: #dc3545;">
                    Delete
                  </button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="5">No keys available.</td>
          </tr>
        <% } %>
      </tbody>
    </table>

    <%- include('partials/footer') %>
  </body>
</html>
