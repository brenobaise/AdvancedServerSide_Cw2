<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Travel Blog Search</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/search.css" />
  </head>
  <body>
    <!-- header -->
    <%- include('partials/header') %>

    <main class="container">
      <h2>Search Travel Posts</h2>

      <form id="searchForm" class="search-form">
        <%- include('partials/csrf.ejs') %>
        <input type="search" name="searchTerm" placeholder="Searchâ€¦" required />
        <select name="filterBy" required>
          <option value="country">Country</option>
          <option value="username">Author</option>
        </select>
        <button type="submit">Search</button>
      </form>

      <div id="info" class="info"></div>
      <ul id="results" class="results"></ul>

      <div class="pagination">
        <button id="prevPage" type="button">Previous</button>
        <button id="nextPage" type="button">Next</button>
      </div>
    </main>

    <!-- footer -->
    <%- include('partials/footer') %>

    <script src="/js/search.js"></script>
  </body>
</html>
